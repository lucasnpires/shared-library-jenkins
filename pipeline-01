@Library('shared-library-example') _

def config = [name: 'Newman', dayOfWeek: 'Friday']

pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: alpine
                image: alpine
                command:
                - cat
                tty: true
            '''
        }
    }
    stages {
        stage('Hello World') {
            steps {
                container('alpine') {          
                    helloWorld(config)
                }
            }
        }
    }
}